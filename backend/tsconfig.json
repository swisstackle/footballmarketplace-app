{    
    "compilerOptions": {        
        "module": "commonjs",
        "esModuleInterop": true,        
        "target": "es6",
        "noImplicitAny": true,        
        "moduleResolution": "node",        
        "sourceMap": true,
        "outDir": "dist",        
        "baseUrl": ".",        
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*",
                "src/api/*",
                "src/db/*",
                "src/*"
            ]
        },
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [ "src/**/*" ],
    "exclude": [],
}