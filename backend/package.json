    "pg": "^8.9.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.6.0",
    "typeorm": "^0.3.11",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/express": "^4.17.16",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/shelljs": "^0.8.11",
    "@types/swagger-ui-express": "^4.1.3",
    "chai": "^4.3.7",
