    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.8.3",
    "rimraf": "^4.1.2",
    "swagger-autogen": "^2.23.0",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "typescript": "^4.9.4"
  }
